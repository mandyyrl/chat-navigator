{
  "manifest_version": 3,
  "name": "ChatGPT Conversation Timeline",
  "version": "3.0.0",
  "description": "Adds a navigation timeline to your ChatGPT, DeepSeek, and Gemini conversations for easy navigation.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timeline Scroller"
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["summarizer-utils.js", "content-chatgpt.js"],
      "css": ["styles-chatgpt.css"]
    },
    {
      "matches": [
        "https://chat.deepseek.com/*"
      ],
      "js": ["content-deepseek.js"],
      "css": ["styles-deepseek.css"]
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["content-gemini.js"],
      "css": ["styles-gemini.css"]
    }
  ]
}
